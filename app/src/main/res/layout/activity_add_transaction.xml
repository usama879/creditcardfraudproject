<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AddTransactionActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/outer_circle"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/circle_outer_layer"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:id="@+id/middle_circle"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/circle_middle_layer"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:id="@+id/inner_circle"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/circle_inner_layer"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:id="@+id/shield_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_shield_lock"
                    android:layout_centerInParent="true"
                    android:contentDescription="Shield Logo" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADD TRANSACTION DETAILS"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:textSize="22sp"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/deep_blue"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transaction Information"
                android:drawableLeft="@drawable/ic_transactions_selected_alt"
                android:drawablePadding="5dp"
                android:fontFamily="@font/inter_semibold"
                android:drawableTint="@color/lighter_blue"
                android:textSize="18sp"
                android:textColor="@color/lighter_blue"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxStrokeColor="#3B82F6"
                app:boxBackgroundColor="#FFFFFF"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:hintTextColor="#1E3A8A"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Amount ($)"
                    android:fontFamily="@font/inter_regular"
                    android:inputType="numberDecimal"
                    android:textColor="#1E3A8A"
                    android:textColorHint="#6B7280"
                    android:padding="16dp"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxStrokeColor="#3B82F6"
                app:boxBackgroundColor="#FFFFFF"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:hintTextColor="#1E3A8A"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/spinnerMerchantCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Merchant Category"
                    android:textColor="#1E3A8A"
                    android:fontFamily="@font/inter_regular"
                    android:textColorHint="#6B7280"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:inputType="none" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxStrokeColor="#3B82F6"
                app:boxBackgroundColor="#FFFFFF"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:hintTextColor="#1E3A8A"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCardNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Card Number"
                    android:fontFamily="@font/inter_regular"
                    android:inputType="numberDecimal"
                    android:textColor="#1E3A8A"
                    android:textColorHint="#6B7280"
                    android:padding="16dp"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location Information"
                android:textSize="18sp"
                android:textColor="@color/lighter_blue"
                android:drawableLeft="@drawable/ic_location"
                android:fontFamily="@font/inter_semibold"
                android:drawablePadding="5dp"
                android:drawableTint="@color/lighter_blue"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:boxStrokeColor="#3B82F6"
                app:boxBackgroundColor="#FFFFFF"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:hintTextColor="#1E3A8A"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="City"
                    android:fontFamily="@font/inter_regular"
                    android:inputType="textCapWords"
                    android:textColor="#1E3A8A"
                    android:textColorHint="#6B7280"
                    android:padding="16dp"
                    android:textSize="16sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:boxStrokeColor="#3B82F6"
                    app:boxBackgroundColor="#FFFFFF"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:hintTextColor="#1E3A8A"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etLatitude"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Latitude"
                        android:fontFamily="@font/inter_regular"
                        android:inputType="numberDecimal|numberSigned"
                        android:textColor="#1E3A8A"
                        android:textColorHint="#6B7280"
                        android:padding="16dp"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:boxStrokeColor="#3B82F6"
                    app:boxBackgroundColor="#FFFFFF"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:hintTextColor="#1E3A8A"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etLongitude"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Longitude"
                        android:fontFamily="@font/inter_regular"
                        android:inputType="numberDecimal|numberSigned"
                        android:textColor="#1E3A8A"
                        android:textColorHint="#6B7280"
                        android:padding="16dp"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transaction Date &amp; Time"
                android:textSize="18sp"
                android:textColor="@color/lighter_blue"
                android:drawableLeft="@drawable/ic_transactions_selected"
                android:fontFamily="@font/inter_semibold"
                android:drawableTint="@color/lighter_blue"
                android:drawablePadding="5dp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="32dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:boxStrokeColor="#3B82F6"
                    app:boxBackgroundColor="#FFFFFF"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:hintTextColor="#1E3A8A"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Date"
                        android:inputType="none"
                        android:focusable="false"
                        android:clickable="true"
                        android:fontFamily="@font/inter_regular"
                        android:textColor="#1E3A8A"
                        android:textColorHint="#6B7280"
                        android:padding="16dp"
                        android:textSize="16sp"
                        android:drawableEnd="@drawable/ic_calendar"
                        android:drawableTint="#3B82F6" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    app:boxStrokeColor="#3B82F6"
                    app:boxBackgroundColor="#FFFFFF"
                    app:boxCornerRadiusTopStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:hintTextColor="#1E3A8A"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Time"
                        android:inputType="none"
                        android:focusable="false"
                        android:fontFamily="@font/inter_regular"
                        android:clickable="true"
                        android:textColor="#1E3A8A"
                        android:textColorHint="#6B7280"
                        android:padding="16dp"
                        android:textSize="16sp"
                        android:drawableEnd="@drawable/ic_time"
                        android:drawableTint="#3B82F6" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveTransaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save Transaction"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/inter_regular"
                android:background="@drawable/button_primary_background"
                android:padding="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="24dp"
                app:cornerRadius="8dp"
                app:backgroundTint="#3B82F6"
                android:elevation="4dp"
                android:stateListAnimator="@null" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>