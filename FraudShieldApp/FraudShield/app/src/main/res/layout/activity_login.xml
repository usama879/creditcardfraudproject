<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="32dp"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true">

                <ImageView
                    android:id="@+id/outer_circle"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/circle_outer_layer"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:id="@+id/middle_circle"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/circle_middle_layer"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:id="@+id/inner_circle"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/circle_inner_layer"
                    android:layout_centerInParent="true" />

                <ImageView
                    android:id="@+id/shield_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_shield_lock"
                    android:layout_centerInParent="true"
                    android:contentDescription="Shield Logo" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FraudShield"
                android:textColor="@color/deep_blue"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="@font/inter_bold"
                android:layout_marginTop="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Secure your payments"
                android:textColor="@color/lighter_blue"
                android:textSize="16sp"
                android:fontFamily="@font/inter_regular"
                android:layout_marginTop="6dp" />

            <EditText
                android:id="@+id/editTextEmail"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="30dp"
                android:hint="Email Address"
                android:textColorHint="#50000000"
                android:inputType="textEmailAddress"
                android:background="@drawable/bg_edittext"
                android:drawableLeft="@drawable/ic_email"
                android:drawableTint="@color/lighter_blue"
                android:drawablePadding="10dp"
                android:paddingHorizontal="16dp"
                android:textSize="14sp"
                android:textColor="@color/deep_blue"
                android:fontFamily="@font/inter_regular" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_edittext">

                <EditText
                    android:id="@+id/editTextPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor="@color/deep_blue"
                    android:textColorHint="#50000000"
                    android:textSize="14sp"
                    android:fontFamily="@font/inter_regular"
                    android:drawableLeft="@drawable/ic_lock"
                    android:drawableTint="@color/lighter_blue"
                    android:drawablePadding="10dp"
                    android:paddingStart="16dp"
                    android:paddingEnd="48dp"
                    android:background="@android:color/transparent" />

                <ImageView
                    android:id="@+id/ivTogglePassword"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_eye_off"
                    app:tint="#503B82F6"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/textForgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forgot Password?"
                android:textColor="@color/lighter_blue"
                android:textSize="14sp"
                android:layout_gravity="right"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/inter_medium" />

            <Button
                android:id="@+id/buttonLogin"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Login"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:background="@drawable/button_background"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="@color/deep_blue"
                android:fontFamily="@font/inter_medium"
                android:layout_marginTop="16dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="50dp"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don't have an account? "
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    android:fontFamily="@font/inter_regular" />

                <TextView
                    android:id="@+id/textRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Register"
                    android:textColor="@color/lighter_blue"
                    android:textSize="14sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="4dp"
                    android:fontFamily="@font/inter_medium" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
