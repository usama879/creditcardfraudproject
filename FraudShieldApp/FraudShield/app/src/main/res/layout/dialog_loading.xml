<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/surface_primary"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="32dp"
        android:orientation="vertical"
        android:gravity="center">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:cardCornerRadius="40dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/primary_container"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_security"
                app:tint="@color/deep_blue" />

        </com.google.android.material.card.MaterialCardView>

        <ProgressBar
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/lighter_blue"
            android:layout_marginBottom="20dp" />

        <TextView
            android:id="@+id/tvDialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Analyzing Transaction"
            android:textColor="@color/deep_blue"
            android:textSize="20sp"
            android:fontFamily="@font/inter_bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvDialogMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please wait we are checking this transaction for fraud patterns and anomalies. This may take a few seconds."
            android:textColor="@color/text_secondary"
            android:textSize="14sp"
            android:fontFamily="@font/inter_regular"
            android:textAlignment="center"
            android:lineSpacingExtra="2dp" />

        <LinearLayout
            android:id="@+id/llProgressSteps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <View
                    android:id="@+id/stepIndicator1"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/step_indicator_active"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/stepText1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Validating transaction data"
                    android:textColor="@color/lighter_blue"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter_medium" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <View
                    android:id="@+id/stepIndicator2"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/step_indicator_inactive"
                    android:layout_marginEnd="12dp" />

                <TextView
                    android:id="@+id/stepText2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Running ML fraud detection"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter_regular" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
